@model Hospital_appointment_system.ViewModels.WorkingHourViewModel

<form method="post" asp-action="CreateWorkingHours" class="pt-5">
    <input asp-for="DoctorID" hidden />
    <div class="border p-3 mt-4">
        <div class="row pd-2">
            <h2 class="text-primary">Adding working hours to Doctor</h2>
            <hr />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="DayOfWeek">Day of Week</label>
        <select asp-for="DayOfWeek" asp-items="@Html.GetEnumSelectList<Days>()" class="form-control form-control-lg">
            <option value="">--Select--</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="StartTime">Start Time</label>
        <input asp-for="StartTime" type="time" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="EndTime">End Time</label>
        <input asp-for="EndTime" type="time" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  
</form>
