@model IEnumerable<Doctor>
@{
    ViewData["Title"] = "Doctor Dashboard";
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-md-8">
            <h2 class="text-primary">Doctor`s List</h2>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-controller="Doctor" asp-action="DoctorsWithWorkingHours" class="btn btn-primary">
                            <i class="bi bi-person-add"></i> List Doctors With Working Hours
                        </a>
                        <a asp-controller="Doctor" asp-action="Create" class="btn btn-primary">
                            <i class="bi bi-person-add"></i> Create New Doctor
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

        <!-- Rest of your code... -->
    </div>
        <br />
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(modil=>modil.Name)</th>
            <th>@Html.DisplayNameFor(modil=>modil.Specialization)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td >
                    @obj.Name
                </td>
                <td > 
                    @obj.Specialization
                </td>
                <td>
                   <div class="btn-group" role="group">
                        <a asp-controller="Doctor" asp-action="Edit" asp-route-id="@obj.DoctorID" class="btn btn-warning"><i class="bi bi-pencil-square"></i>Edit</a>
                        <a asp-controller="Doctor" asp-action="Delete" asp-route-id="@obj.DoctorID" class="btn btn-danger"><i class="bi bi-trash"></i>Delete</a>
                        <a asp-controller="Doctor" asp-action="CreateWorkingHours" asp-route-doctorId="@obj.DoctorID" class="btn btn-success"><i class="bi bi-clock-history"></i>Add Working Hours</a>
                        </div>
                </td>
            </tr>
        }
    </tbody>

</table>
</div>
