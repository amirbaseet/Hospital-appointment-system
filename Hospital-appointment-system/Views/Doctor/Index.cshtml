@model IEnumerable<Doctor>
@{
    ViewData["Title"] = "Doctor Dashboard";
}
<div class="container p-3 ">
    <div class="row pt-5">
        <div class="col-6">
            <h2 class="text-primary">Doctors List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Doctor" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-person-add"></i> &nbsp; Create New Doctor
            </a>
        </div>
    </div>
    <br />
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(modil=>modil.Name)</th>
            <th>@Html.DisplayNameFor(modil=>modil.Specialization)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="50%">
                    @obj.Name
                </td>
                <td width="30%"> 
                    @obj.Specialization
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                            <a asp-controller="Doctor" asp-action="Edit" asp-route-id="@obj.DoctorID"
                            class="btn btn-warning mx-2"> <i class="bi bi-pencil-square"></i>Edit</a>
                            <a asp-controller="Doctor" asp-action="Delete" asp-route-id="@obj.DoctorID"
                               class="btn btn-danger mx-2"> <i class="bi bi-trash"></i>Delete</a>

                    </div>
                </td>
            </tr>
        }
    </tbody>

</table>
</div>