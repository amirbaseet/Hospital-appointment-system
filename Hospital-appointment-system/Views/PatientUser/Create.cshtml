@using Hospital_appointment_system.Data.Enum;
@* ?@model IEnumerable<PatientUser> *@
@model Hospital_appointment_system.ViewModels.RegisterViewModel;

<div class="pt-5">
	<form method="post" asp-controller="PatientUser" asp-action="Create">
		<div calss="border p-3 mt-4">
			<div calss="row pd-2">
				<h2 class="text-primary">@ViewData["CreatePatient"]</h2>
				<hr />
			</div>
			@if (TempData["Error"] != null)
			{
				<div class="col-md-12 alert alert-danger">
					<span><b>Sorry!</b> - @TempData["Error"] </span>
				</div>
			}
		</div>
		<div class="mb-3">
			<label asp-for="Username" class="control-label"></label>
			<input asp-for="Username" class="form-control" />
			<span asp-validation-for="Username" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="EmailAddress" class="control-label"></label>
			<input type="email" asp-for="EmailAddress" class="form-control" />
		</div>
		<div class="form-group">
			<label asp-for="Gender">Gender</label>
			<select asp-items="@Html.GetEnumSelectList<GenderCategory>()"
				class="form-control form-control-lg">
				<--Select--></select>
		</div>
		<div class="mb-3">
			<label asp-for="Password" class="control-label"></label>
			<input type="password" asp-for="Password" class="form-control" />
		</div>
		<div class="form-group">
			<label asp-for="ConfirmPassword" class="control-label"></label>
			<input asp-for="ConfirmPassword" class="form-control" />
			<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
		</div>

		<button type="submit" class="btn btn-primary" style="width:150px">@ViewData["Create"]</button>

		<a asp-controller="PatientUser" asp-action="ListPatients" class="btn btn-secondary" style="width:150px">
			@ViewData["BacktoList"]
		</a>
	</form>
</div>


@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}