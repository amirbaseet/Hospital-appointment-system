@model PatientUser
<div class="pt-5">
	<form method="post" asp-action="Delete">
		<div calss="border p-3 mt-4">
			<div calss="row pd-2">
				<h2 class="text-primary">@ViewData["DeletePatient"]</h2>
				<hr />

			</div>
			
		</div>
		<div class="mb-3">
			<label asp-for="Name"></label>
			<input asp-for="Name" disabled class="form-control" />
		</div>
		<div class="mb-3">
			<label asp-for="Email"></label>
			<input type="email" asp-for="Email" disabled class="form-control" />
		</div>
        <div class="form-group">
            <label asp-for="Gender">Gender</label>
            <select asp-items="@Html.GetEnumSelectList<GenderCategory>()"
                    disabled class="form-control form-control-lg">
                <--Select-->
            </select>
        </div>

		<button type="submit" class="btn btn-danger" style="width:150px">@ViewData["Delete"]</button>
		<a asp-controller="PatientUser" asp-action="ListPatients" class="btn btn-secondary" style="width:150px">
			@ViewData["BacktoList"]
		</a>
	</form>
</div>
