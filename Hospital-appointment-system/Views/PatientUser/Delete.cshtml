@model PatientUser
<div class="pt-5">
	<form method="post" asp-action="Delete">
		<div calss="border p-3 mt-4">
			<div calss="row pd-2">
				<h2 class="text-primary">Delete Patient</h2>
				<hr />

			</div>
			<div class="border p-3 mt-4">
				<div class="row pd-2">
					<h2 class="text-primary">Edit Patient</h2>
					<hr />
				</div>
			</div>
		</div>
		<div class="mb-3">
			<label asp-for="UserName"></label>
			<input asp-for="UserName" disabled class="form-control" />
		</div>
		<div class="mb-3">
			<label asp-for="Email"></label>
			<input type="email" asp-for="Email" disabled class="form-control" />
		</div>
		<div class="form-group">
			<label asp-for="Gender">Gender</label>
			<select asp-for="Gender" asp-items="@Html.GetEnumSelectList<GenderCategory>()" disabled class="form-control form-control-lg">
				<option>--Select--</option>
			</select>
		</div>

		<button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
		<a asp-controller="PatientUser" asp-action="Index" class="btn btn-secondary" style="width:150px">
			Back to List
		</a>
	</form>
</div>
