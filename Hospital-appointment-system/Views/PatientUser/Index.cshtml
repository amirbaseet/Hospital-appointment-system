@model IEnumerable<PatientUser>

@{
    ViewData["Title"] = "Patient Dashboard";
}
<div class="container p-3 ">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Patients List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="PatientUser" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-person-add"></i> &nbsp; Add a Patient
            </a>
        </div>
    </div>
    <br />
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(modil=>modil.Username)</th>
                <th>@Html.DisplayNameFor(modil=>modil.Email)</th>
                <th>@Html.DisplayNameFor(modil=>modil.Password)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="20%">
                        @obj.Username
                    </td>
                    <td width="50%">
                        @obj.Email
                    </td>
                    <td width="30%">
                        @obj.Password
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="PatientUser" asp-action="Edit" asp-route-id="@obj.UserID"
                               class="btn btn-warning mx-2"> <i class="bi bi-pencil-square"></i>Edit</a>
                            <a asp-controller="PatientUser" asp-action="Delete" asp-route-id="@obj.UserID"
                               class="btn btn-danger mx-2"> <i class="bi bi-trash"></i>Delete</a>

                        </div>
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>
