﻿@using Hospital_appointment_system.Data.Enum;
@model Hospital_appointment_system.Models.PatientUser

<form asp-controller="PatientUser" asp-action="Edit" method="post" class="pt-5">
	<input asp-for="Id" type="hidden" />

	<div class="border p-3 mt-4">
		<div class="row pd-2">
			<h2 class="text-primary">@ViewData["EditPatient"]</h2>
			<hr />

		</div>
	</div>

	<div class="mb-3">
		<label asp-for="UserName" class="form-label"></label>
		<input asp-for="UserName" class="form-control" />
	</div>
	<div class="form-group">
		<label asp-for="Gender">Gender</label>
		<select asp-for="Gender" asp-items="@Html.GetEnumSelectList<GenderCategory>()" class="form-control form-control-lg">
			<option>--Select--</option>
		</select>
	</div>
	<div class="mb-3">
		<label asp-for="Email" class="form-label"></label>
		<input asp-for="Email" class="form-control" />
	</div>

	<button type="submit" class="btn btn-primary" style="width:150px">@ViewData["Update"]</button>
	<a asp-controller="PatientUser" asp-action="ListPatients" class="btn btn-secondary" style="width:150px">
		@ViewData["BacktoList"]
	</a>
</form>
